<appian-plugin name="Guidewire" key="com.appian.ps.guidewire">
  <plugin-info>
    <description>Guidewire Connected System Plugin</description>
    <vendor name="Appian" url="https://appian.com/"/>
    <version>1.0.0</version>
    <application-version min="7.6.0.4"/>
  </plugin-info>
  <connected-system key="Guidewire">
    <version major-version="1">
      <connected-system-template key="BasicAuth"
                                 name="Guidewire"
                                 class="com.appian.ps.guidewire.templates.connectedSystemTemplates.BasicAuth"/>
      <connected-system-template key="StandaloneService"
                                 name="Guidewire"
                                 class="com.appian.ps.guidewire.templates.connectedSystemTemplates.StandaloneService"/>
      <connected-system-template key="ServiceWithServiceAccountMapping"
                                 name="Guidewire"
                                 class="com.appian.ps.guidewire.templates.connectedSystemTemplates.ServiceWithServiceAccountMapping"/>
      <connected-system-template key="ServiceWithUserContext"
                                 name="Guidewire"
                                 class="com.appian.ps.guidewire.templates.connectedSystemTemplates.ServiceWithUserContext"/>
      <integration-template key="GuidewireIntegrationTemplate"
                            name="Guidewire"
                            class="com.appian.ps.guidewire.templates.integrationTemplates.GuidewireIntegrationTemplate"
                            request-policy="read_and_write" />
    </version>
  </connected-system>
</appian-plugin>
